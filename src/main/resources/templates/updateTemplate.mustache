{{>layout/header}}

<h1>주소록 수정</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <input type="text" class="form-control" id="id" value="{{post.id}}" hidden="true">
            <div class="form-group">
                <label for="name">이름</label>
                <input type="text" class="form-control" id="name" value="{{post.name}}" placeholder="이름을 입력하세요">
            </div>
            <div class="form-group">
                <label for="age"> 나이 </label>
                <input type="text" class="form-control" id="age" value="{{post.age}}" placeholder="나이를 입력하세요">
            </div>
            <div class="form-group">
                <label for="phone_number"> 연락처 </label>
                <input
                        type="tel"
                        class="form-control m-input"
                        name="tel"
                        id="phone_number"
                        value="{{post.phone_number}}"
                        required
                        pattern="[0-9]{2,3}-[0-9]{3,4}-[0-9]{4}"
                        maxlength="13"
                        placeholder="예) 010-1234-5678"
                />
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-update">수정</button>
        <button type="button" class="btn btn-danger" id="btn-delete">삭제</button>
    </div>
</div>

{{>layout/footer}}